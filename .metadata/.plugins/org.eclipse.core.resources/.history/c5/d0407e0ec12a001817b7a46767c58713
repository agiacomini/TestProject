package com.giacomini.andrea.MyExample;

import java.math.BigDecimal;

public class CompareBigDecimal {

    /**
    * @param args
    */
    public static void main(String[] args) {
                   BigDecimal d = new BigDecimal("3");
                   BigDecimal f = new BigDecimal("3.00");
                   if (d==f)
                                   System.out.println("IMPOSSIBLEEEEEEE!!!!!");
                   if (d.equals(f))
                                   System.out.println("better but still not the right one");
                   if (d.compareTo(f)==0)
                                   System.out.println("This is the right one");
    }
}